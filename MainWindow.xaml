<Window x:Class="Offerte_en_Facturatie_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Offerte_en_Facturatie_UI"
        mc:Ignorable="d"
        Title="Offerte en Facturatie" 
        WindowStartupLocation="CenterScreen" Width="1024" Height="768">

    <!-- ToDo
        TabItem naar collapse zetten voor de live versie -->
    <Grid>
        <!-- Menu balk -->
        <Menu DockPanel.Dock="Top">
            <!-- Bestand -->
                <MenuItem x:Name="menuBestand" 
                          Header="Bestand">
                    <MenuItem x:Name="menuMijnBedrijf" 
                              Header="Mijn Bedrijf"/>
                    <MenuItem x:Name="menuAfsluiten" 
                              Header="Afsluiten"/>
                </MenuItem>

                <!-- Over -->
                <MenuItem x:Name="menuOver" 
                          Header="Over">
                    <MenuItem x:Name="menuDocumentatie" 
                              Header="Documentatie"/>
                    <MenuItem x:Name="menuInfo" 
                              Header="Info"/>
                </MenuItem>
            </Menu>


        <Grid Margin="0 18 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Links -->
                <ColumnDefinition Width="5*"/>
                <!-- Rechts -->
            </Grid.ColumnDefinitions>

            <!-- Hoofd/NavigatieMenu Links -->
            <Grid Grid.Column="0"
                  VerticalAlignment="Stretch">

                <Border Padding="1">
                    <StackPanel Width="150"
                                Margin="0 30">
                        <!-- Klant Menu -->
                        <ComboBox>
                            <ComboBoxItem>Nieuwe Klant</ComboBoxItem>
                            <ComboBoxItem>Klant Bekijken</ComboBoxItem>
                            <ComboBoxItem>Klant Aanpassen</ComboBoxItem>
                        </ComboBox>
                            <Button Click="Button1_Click"
                                    Content="Klant"
                                    HorizontalAlignment="Center"
                                    Width="125"
                                    Height="30"
                                    Margin="10">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="BtnNieuweKlant_Click" Header="Nieuwe Klant"/>
                                        <MenuItem Click="BtnKlantBekijken_Click" Header="Klant Bekijken"/>
                                        <MenuItem Click="BtnKlantAanpassen_Click" Header="Klant Aanpassen"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                            <!-- Offerte Menu -->
                            <Button Click="Button2_Click" 
                                    Content="Offerte"
                                    HorizontalAlignment="Center"
                                    Width="125"
                                    Height="30"
                                    Margin="10">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="BtnNieuweOfferte_Click" Header="Nieuwe Offerte"/>
                                        <MenuItem Click="BtnOfferteBekijken_Click" Header="Offerte Bekijken"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                        <!-- Factuur Menu -->
                            <Button Click="Button3_Click" 
                                    Content="Factuur"
                                    HorizontalAlignment="Center"
                                    Width="125"
                                    Height="30"
                                    Margin="10">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="BtnNieuweFactuur_Click" Header="Nieuwe Factuur"/>
                                        <MenuItem Click="BtnFactuurBekijken_Click" Header="Factuur Bekijken"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                    </StackPanel>
                </Border>
            </Grid>

            <!-- KlantMenu Rechts -->
            <Grid Grid.Column="1">

                <TabControl>
                    <TabItem x:Name="tabKlantMenu" 
                             Header="KlantMenu" 
                             Visibility="Visible">

                        <TabControl x:Name="klanttabControl">
                            <!-- Nieuwe Klant -->
                            <TabItem x:Name="tab_NieuweKlant"
                                     Header="Nieuwe Klant" 
                                     Visibility="Visible">
                                <Grid>
                                    <Label Content="Voer klantgegevens in en klik op accepteer om de klant aan de database toe te voegen."
                                           Padding="5"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Center"
                                           Background="LightGray"/>
                                    
                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">

                                    <!-- Formulier1 Nieuwe Klant -->
                                        <Grid>
                                            <StackPanel x:Name="Form1"
                                                        Background="LightGray"
                                                        Width="500">

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Bedrijfsnaam -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Bedrijfsnaam"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_Bedrijfsnaam" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Klant Nummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Klant Nummer"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_KlantNummer" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- KvK Nummer -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="KvK nummer"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_KvKNummer" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- BTW Nummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="BTW nummer"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_BTWNummer" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Voornaam -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Contactpersoon Voornaam"
                                                               Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form1_ContactVoornaam" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- tussenvoegsel -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="tussenvoegsel"
                                                               Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form1_tussenvoegsel" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Achternaam -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Achternaam"
                                                               Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form1_Achternaam" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Straatnaam -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Straatnaam"
                                                               Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form1_Straatnaam" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Huisnummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Huisnummer"
                                                               Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form1_Huisnummer" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Toevoeging -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Toevoeging"
                                                               Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form1_Toevoeging" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Postcode -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Postcode"
                                                               Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form1_Postcode" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Plaats -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Plaats"
                                                               Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form1_Plaats" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Telefoon Nummer -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Telefoon nummer"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_TelNummer" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Fax Nummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Fax Nummer"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_FaxNummer" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- E-Mail -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="E-Mail adres"
                                                               Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form1_EMail" 
                                                             Padding="2"
                                                             Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="61*"/>
                                                        <ColumnDefinition Width="439*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Website -->
                                                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2">
                                                        <TextBlock Text="Website"
                                                               Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form1_Website" 
                                                             Padding="2"
                                                             Margin="10 0 10 10"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Margin="10 15 10 10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Accepteer -->
                                                    <Button x:Name="Form1_btnAccepteer" 
                                                        Content="Accepteer"
                                                        Background="LightBlue"
                                                        Grid.Column="0" Click="Form1_btnAccepteer_Click"/>
                                                    <!-- Annuleer -->
                                                    <Button x:Name="Form1_btnAnnuleer" 
                                                        Content="Annuleer"
                                                        Background="IndianRed"
                                                        Grid.Column="1"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- Klant Bekijken -->
                            <TabItem x:Name="tab_KlantBekijken" 
                                     Header="Klant Bekijken" 
                                     Visibility="Visible">
                                
                                <Grid>
                                    <Label Content="Voer klant referentie nummer in of zoek op naam."
                                           Padding="5"
                                           HorizontalContentAlignment="Center"
                                           VerticalAlignment="Top"
                                           Background="LightGray"/>

                                    <!-- Zoekbalk Klant -->
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Margin="0 50 0 50">

                                        <TextBox x:Name="ZoekbalkKlant"
                                                 Padding="2"
                                                 Width="100"/>
                                    </StackPanel>
                                    <StackPanel VerticalAlignment="Center">
                                        
                                        <DataGrid x:Name="datagrid_KlantBekijken"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="750"
                                                  Height="500"
                                                  RowHeight="20"
                                                  ColumnWidth="100"
                                                  GridLinesVisibility="All"
                                                  HeadersVisibility="All"
                                                  Background="LightGray"
                                                  RowBackground="White"
                                                  AlternatingRowBackground="LightGray"/>
                                        
                                    </StackPanel>
                                </Grid>
                            </TabItem>

                            <!-- Klant Aanpassen -->
                            <TabItem x:Name="tab_KlantAanpassen" 
                                     Header="Klant Aanpassen" 
                                     Visibility="Visible">
                                <Grid>
                                    <Label Content="Wijzig klant gegevens en klik op accepteer om door te voeren in de database."
                                           Padding="5"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Center"
                                           Background="LightGray"/>

                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">

                                        <!-- Formulier2 Klant Aanpassen -->
                                        <Grid>
                                            <StackPanel HorizontalAlignment="Center"
                                                        Background="LightGray"
                                                        Width="500">
                                                
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Bedrijfsnaam -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Bedrijfsnaam"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_Bedrijfsnaam" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Klant Nummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Klant Nummer"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_KlantNummer" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- KvK Nummer -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="KvK nummer"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_KvKNummer" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- BTW Nummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="BTW nummer"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_BTWNummer" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Voornaam -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Contactpersoon Voornaam"
                                                           Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form2_ContactVoornaam" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- tussenvoegsel -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="tussenvoegsel"
                                                           Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form2_tussenvoegsel" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Achternaam -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Achternaam"
                                                           Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form2_Achternaam" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Straatnaam -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Straatnaam"
                                                           Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form2_Straatnaam" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Huisnummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Huisnummer"
                                                           Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form2_Huisnummer" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Toevoeging -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Toevoeging"
                                                           Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form2_Toevoeging" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Postcode -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Postcode"
                                                           Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form2_Postcode" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Plaats -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Plaats"
                                                           Margin="10 5 0 0"/>
                                                        <TextBox x:Name="Form2_Plaats" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Telefoon Nummer -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Telefoon nummer"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_TelNummer" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- Fax Nummer -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Fax Nummer"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_FaxNummer" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>

                                                    <!-- E-Mail -->
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="E-Mail adres"
                                                           Margin="10 10 0 0"/>
                                                        <TextBox x:Name="Form2_EMail" 
                                                         Padding="2"
                                                         Margin="10 0 10 0"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid HorizontalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Website -->
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Website"
                                                           Margin="10 15 0 0"/>
                                                        <TextBox x:Name="Form2_Website" 
                                                         Padding="2"
                                                         Margin="10 0 10 10"/>
                                                    </StackPanel>
                                                </Grid>

                                                <Grid Margin="10 15 10 10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Accepteer -->
                                                    <Button x:Name="Form2_btnAccepteer" 
                                                    Content="Accepteer"
                                                    Background="LightBlue"
                                                    Grid.Column="0"/>
                                                    <!-- Annuleer -->
                                                    <Button x:Name="Form2_btnAnnuleer" 
                                                    Content="Annuleer"
                                                    Background="IndianRed"
                                                    Grid.Column="1"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>

                    <!-- OfferteMenu Rechts -->
                    <TabItem Header="OfferteMenu" 
                             Visibility="Visible">
                        <TabControl x:Name="offertetabControl">
                            
                            <!-- Nieuwe Offerte -->
                            <TabItem x:Name="tab_NieuweOfferte" 
                                     Header="Nieuwe Offerte" 
                                     Visibility="Visible">
                                
                                <StackPanel>
                                    <Label Content="Maak een nieuwe offerte aan."
                                           Padding="5"
                                           HorizontalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           Background="LightGray"/>

                                    <StackPanel Background="LightSlateGray"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="0 50 0 50">

                                    </StackPanel>
                                </StackPanel>
                            </TabItem>

                            <!-- Offerte Bekijken -->
                            <TabItem x:Name="tab_OfferteBekijken" 
                                     Header="Offerte Bekijken" 
                                     Visibility="Visible">
                                
                                <Grid>
                                    <Label Content="Zoek op offerte nummer."
                                           Padding="5"
                                           HorizontalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           VerticalAlignment="Top"
                                           Background="LightGray"/>

                                    <!-- Zoekbalk Offerte -->
                                    <StackPanel Background="LightSlateGray"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Margin="0 50 0 50">

                                        <TextBox x:Name="ZoekbalkOfferte"
                                                 Padding="2"
                                                 Width="100"/>

                                    </StackPanel>
                                    <StackPanel VerticalAlignment="Center">

                                        <DataGrid x:Name="datagrid_OfferteBekijken"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="750"
                                                  Height="500"
                                                  RowHeight="20"
                                                  ColumnWidth="100"
                                                  GridLinesVisibility="All"
                                                  HeadersVisibility="All"
                                                  Background="LightGray"
                                                  RowBackground="White"
                                                  AlternatingRowBackground="LightGray"/>
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </TabItem>

                    <!-- Factuurmenu Rechts -->
                    <TabItem Header="FactuurMenu" 
                             Visibility="Visible">
                        <TabControl x:Name="factuurtabControl">
                            
                            <!-- Nieuwe Factuur -->
                            <TabItem x:Name="tab_NieuweFactuur" 
                                     Header="Nieuwe Factuur" 
                                     Visibility="Visible">
                                <StackPanel>
                                    <Label Content="Maak een nieuwe factuur aan."
                                           Padding="5"
                                           HorizontalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           Background="LightGray"/>

                                    <StackPanel Background="LightSlateGray"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="0 50 0 50">

                                    </StackPanel>
                                </StackPanel>

                            </TabItem>

                            <!-- Factuur Bekijken -->
                            <TabItem x:Name="tab_FactuurBekijken" 
                                     Header="Factuur Bekijken" 
                                     Visibility="Visible">
                                
                                <Grid>
                                    <Label Content="Zoek op factuur nummer."
                                           Padding="5"
                                           HorizontalAlignment="Stretch"
                                           HorizontalContentAlignment="Center"
                                           VerticalAlignment="Top"
                                           Background="LightGray"/>

                                    <!-- Zoekbalk Factuur -->
                                    <StackPanel Background="LightSlateGray"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Margin="0 50 0 50">

                                        <TextBox x:Name="ZoekbalkFactuur"
                                                 Padding="2"
                                                 Width="100"/>

                                    </StackPanel>
                                    <StackPanel VerticalAlignment="Center">

                                        <DataGrid x:Name="datagrid_FactuurBekijken"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="750"
                                                  Height="500"
                                                  RowHeight="20"
                                                  ColumnWidth="100"
                                                  GridLinesVisibility="All"
                                                  HeadersVisibility="All"
                                                  Background="LightGray"
                                                  RowBackground="White"
                                                  AlternatingRowBackground="LightGray"/>

                                    </StackPanel>
                                </Grid>

                            </TabItem>
                        </TabControl>
                    </TabItem>
                </TabControl>

            </Grid>
        </Grid>
    </Grid>




</Window>
